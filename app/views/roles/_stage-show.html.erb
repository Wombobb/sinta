<div class="mx-3" data-controller="hide-div-stage">
  <div class="row mt-3">
    <div class="col-6">
      <div class="stages-list-card mb-3">
        <%= render 'roles/interviewers', stage:stage %>
      </div>
      <div class="stages-list-card">
        <%= render 'stages/questions', stage: stage %>
      </div>
    </div>
    <div class="col-6">
      <div class="stages-list-card h-100">
        <%= render 'roles/candidates', stage:stage %>
      </div>
    </div>
  </div>
  <div class="modal" id="teammembers<%= stage.id %>" tabindex="-1" aria-labelledby="teammembers<%= stage.id %>" aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="teammembers<%= stage.id %>">Select Interviewers</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render 'stage_interviewers/interviewer-form', stage:stage %>
        </div>
      </div>
    </div>
  </div>
</div>
