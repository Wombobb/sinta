<div id="content-container">
  <div class="container-fluid p-5">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h1 style="padding-left: 6px;color: $green;"><%= @role.title %></h1>
          <%= render 'roles/create-interview', stage:@stage %>
        </div>
        <div class= 'row'>
          <div class="c_breadcrumb">
            <ul class="nav nav-pills nav-justified" id="pills-tab" role="tablist">
              <% @role.stages.each do |stage| %>
                <li class="nav-item" role="presentation" style= "margin-right: -1%;">
                  <button class="nav-link <%= (params[:tab].nil? && stage.name == 'Screening') || params[:tab] == stage.name ? " active" : "" %>" id="pills-<%= stage.name %>-tab" data-bs-toggle="pill" data-bs-target="#pills-<%= stage.name %>" type="button" role="tab" aria-controls="pills-stages" aria-selected="false"><%= stage.name %></button>
                </li>
              <% end %>
            </ul>
            <div class="tab-content" id="pills-tabContent">
              <% @role.stages.each do |stage| %>
                <div class="tab-pane fade <%= (params[:tab].nil? && stage.name == 'Screening') || params[:tab] == stage.name ? " show active" : "" %> " id="pills-<%= stage.name %>" role="tabpanel" aria-labelledby="pills-questions-tab" tabindex="2"><%= render 'roles/stage-show', stage:stage %></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
