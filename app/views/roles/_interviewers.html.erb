<div class="d-flex" style="margin-bottom: 4%; margin-top: 6%;margin-left: 0%">
  <% stage.stage_interviewers.each do |interview| %>
    <%= image_tag interview.user.photo, alt: "text", class:"avatar", style:"margin-left: 1%; width: 100px; height: 100px";%>
    <div style= 'margin-left: 5%; margin-top: 7%;'>
      <p class= "mt-3"> Interviewer: <%= interview.user.first_name %> <%= interview.user.last_name %> </p>
      <p> Position: <%= interview.user.position %> </p>
      <p> Dept: <%= interview.user.department %> </p>
    </div>
  <% end %>
</div>
