<div class="container">
  <div class="pagetitle m-4">
    <h1>Available Roles</h1>
  </div>
  <div class="d-flex gap-3 ms-4">
    <div class="grid-role-list">
      <% @roles.each do |role| %>
        <div class="grid-role-card" style="width: 18rem;">
          <div class="">
            <h5 class="role-card-head"> <strong><%= role.title %></strong></h5>
            <p class="role-card-detail"><%= role.description %></p>
            <div class="role-card-option">
              <%= link_to "More details", role_path(role) %>
              <p><%= role.completed ? "Completed" : "To be completed" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
