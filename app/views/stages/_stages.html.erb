<div class="container">
  <ul>
    <div class="row">
      <% @role.stages.each do |stage| %>
        <div class="stages-card col-3">
          <li>
            <%= image_tag "sinta-icons/04.png", style: 'height:100px; width:100px;' %>
            <p class ="mb-0"><%= stage.name %></p>
          </li>
        </div>
      <% end %>
    </div>
  </ul>
  <%= simple_form_for [@role, @stage] do |f| %>
    <%= f.input :name, label: "Stage Name" %>
    <%= f.submit %>
  <% end %>
</div>
