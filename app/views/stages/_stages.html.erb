<div class="container">
  <div class="stages-card">
    <h3><%= @role.title %></h3>
    <ul>
      <% @role.stages.each do |stage| %>
        <li>
          <p><%= stage.name %></p>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="stages-btn">
    <button type="button" class="btn btn-primary">Add</button>
  </div>
</div>
<%= simple_form_for [@role, @stage] do |f| %>
  <%= f.input :name %>
  <%= f.submit %>
<% end %>
