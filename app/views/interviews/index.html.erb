<div class="container" id="content-container">
  <div class="mt-3">
    <h2>Unscheduled Interviews:</h2>
  </div>
  <div class="row justify-content-center m-3">
    <% @interviews.each do |interview| %>
      <% if interview.date.nil? %>
        <div class="col-4">
          <%= render 'interviews/cards-unscheduled', interview:interview %>
        </div>
      <% end %>
    <% end %>
  </div>
  <h2>Scheduled Interviews:</h2>
  <div class="row justify-content-center m-3">
    <% @interviews.each do |interview| %>
      <% if interview.date.present? %>
        <div class="col-4">
          <%= render 'interviews/cards', interview:interview %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
