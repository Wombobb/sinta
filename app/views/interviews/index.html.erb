<div id="content-container">
  <div class="mx-3">
    <div class="candidates-list-card mt-3">
      <div class="mt-3">
        <% unless @unscheduled_interviews.empty? %>
          <h2 class="mb-4">Unscheduled Interviews:</h2>
        </div>
        <div class="row justify-content-center m-3">
          <% @unscheduled_interviews.each do |interview| %>
            <div class="col-4">
              <%= render 'interviews/cards-unscheduled', interview:interview %>
            </div>
          <% end %>
        </div>
      <% end %>
      <h2 class="mb-4">Scheduled Interviews:</h2>
      <div class="row justify-content-center m-3">
        <% @interviews.each do |interview| %>
          <% if interview.date.present? %>
            <div class="col-4">
              <%= render 'interviews/cards', interview:interview %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
